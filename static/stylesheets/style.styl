/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa3f20
background-color = #faf9f0

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  padding 50px 10px
  color #fff
  font-size 30px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 600px
  margin 25px auto
  overflow hidden
  
.errors
  color red
  padding 10px

.main-content
  float left
  width 400px
  
  a
    color darken(main-color, 20%)
    
  h1
    margin-bottom 15px
    font-size 24px
    text-transform capitalize
    
  h2
    margin-bottom 5px
    font-size 18px
    
  form
    margin-bottom 20px
    
    input
        width 75%
    
    input[type="submit"]
        width 75px
    input[type="radio"]
        width 15px
.poll
    margin: 20px;
    padding: 5px;
    border-left 1px dotted #aaa
    border-right 1px dotted #aaa
    border-radius: 4px
    
    h2
      font-size 18px
      text-transform capitalize
      
    p
        margin-left 5px
        
    .moderate
        float right
        position relative
        font-size 14px
        bottom 15px
        color darken(main-color, 20%)
        margin-right 5px
    
.sidebar
  float left
  width 200px

  .widget

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    border-radius 3px
    border 1px solid #ccc
    margin-left 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Quicksand'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px
      text-align center

    p
      font-family "Helvetica Neue", Helvetica, sans-serif
      font-size 16px
      padding 0px 10px
      margin-left 10px
      margin-bottom 10px
      letter-spacing 2px
      font-weight bold
    a
      color darken(main-color, 30%)

p
  line-height 1.8

footer
  width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px
  
  a
    color main-color