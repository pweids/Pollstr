/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa3f20
background-color = #faf9f0

@media screen and (min-width:758px)
    #sortable
        width 60%
        
    header
        padding 50px 10px
        
    .container
        width 600px
        margin 25px auto
    
    .main-content
        float left
        width 400px
        
        h1
             margin-bottom 15px
             font-size 24px
        
    .sidebar
        float left
        width 200px
        
        h1
            display block
        
        .widget
            border-radius 3px
            border 1px solid #ccc
            background-color background-color
            box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)
            margin-left 20px
            
            p
                font-size 16px
                padding 0px 10px
                margin-left 10px
        
    footer
        margin 50px auto
        width 500px

@media screen and (max-width:758px)
    #breakme
        display inline-block
    header
        padding 10px 10px
        
    .main-content
        margin 50px 40px
        float none
        //text-align center
        
        h1
            text-align center
            font-size 24px
        form
            width 250px
            margin auto
            
    .sidebar
        position absolute
        top 65px
        left 4%
        width 91%
        text-align center
        
        .widget
            margin 0 auto
            border-radius 3px
            border 1px solid #ccc
            background-color background-color
            box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)
            p
                display inline
                padding 0px 8cpx
                margin-left 10px
            h1
                display none
                margin-bottom 5px
    footer
        margin 0 30px
        text-align center
        
@media screen and (max-width:450px)
    .breakme
        display inline-block
        
    header
        padding 5px
    
    .main-content
        min-width 320
        margin 20px 15px
        
        h1
            font-size 20px
            font-weight bold

    .sidebar
        position absolute
        top 40px
        left 0
        width 100%
        text-align center

        .widget
            margin 0 auto
            border none
            box-shadow none
            border-radius 0px
            background-color transparent
            border-bottom 1px solid #ccc
            p
                white-space nowrap
                display inline
                font-size 16px
                padding 4px
                margin 5px
            h1
                display none
                margin-bottom 5px
    footer
        margin 0 30px
        text-align center
        font-size 13px

@media screen and (max-width:320px)
    .breakme
        display inline-block
    .main-content
        margin 15px 5px
        
        p
            text-align justify
            
    .sidebar
        .widget
            padding 0

    footer
        margin 0
        width 100%
        font-size 12px
    
    .poll
        padding 0 5px 15px 5px !important
        
    .moderate
        margin-top 15px !important
        

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  color #fff
  font-size 30px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  overflow hidden
  
.errors
  color red
  padding 10px

.main-content
  
  a
    color darken(main-color, 20%)
    
  h1
    text-transform capitalize
    
  h2
    margin-top 25px
    margin-bottom 10px
    font-size 18px
    
  form
    margin-bottom 20px
    
    input
        width 75%
    
    input[type="submit"]
        width 75px
    input[type="radio"]
        width 15px
    
    p
        margin-top 10px
        margin-bottom 10px
        
#codeBox
    border 1px solid #cacaca;
    line-height 1.2em
    font 12px Monaco, "Courier New", "DejaVu Sans Mono", "Bitstream Vera Sans Mono", monospace;
    padding 10px
    overflow auto
    border-radius 3px
    background-color #fafafb
    color #393939

#sortable 
    list-style-type none
    margin 0
    padding 0
    cursor url(https://mail.google.com/mail/images/2/openhand.cur), default !important;

    li
        margin 0 3px 3px 3px
        padding 0.4em
        padding-left 1.5em
        font-size: 1.4em
        height 18px
        
        span
            position absolute
            margin-left -1.3em
.poll
    margin: 10px 20px 20px 10px;
    padding: 1px 5px
    box-sizing border-box
    border-left 1px dotted #aaa
    border-right 1px dotted #aaa
    border-radius: 4px
    
    h2
      font-size 18px
      text-transform capitalize
      
    p
        margin-left 5px
        
    .moderate
        float right
        position relative
        font-size 14px
        bottom 15px
        color darken(main-color, 20%)
        margin-right 5px
    
.sidebar
  float left

  .widget

    h1
      font-family 'Quicksand'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px
      text-align center

    p
      font-family "Helvetica Neue", Helvetica, sans-serif
      margin-bottom 10px
      letter-spacing 2px
      font-weight bold
    a
      color darken(main-color, 30%)
    
    br
        display block
        margin 10px 0
        content ""

p
  line-height 1.8

footer
  border-top 1px dotted #ccc
  padding-top 5px
  
  a
    color main-color