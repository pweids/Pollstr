!!!5
html
    head
        title Pollstr - #{title}
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        header
            h1 Pollstr
        .container
            .errors
                - if (typeof(errors) !== 'undefined')
                    each err in errors
                        p= err
            .flash
                - if (typeof(flash) !== 'undefined')
                    each f in flash
                        p= f
            .main-content
                block content
            .sidebar
                .widget
                    h1 Navigation
                    if user != undefined
                        p
                            a(href="/home") Home
                        p
                            a(href="/about") Methods
                        p
                            a(href="/myPolls") My Polls
                        p
                            a(href="/createPoll") Create a Poll
                        p
                            a(href="/logout") Logout
                    else
                        p
                            a(href="/") Home
                        p
                            a(href="/about") Methods
                        p
                            a(href="/login") Login
                        p
                            a(href="/register") Register
        footer
            if user != undefined
                p Logged in as #{user.username}
            p 
                | Created by 
                a(href="http://www.callmepaul.com") Paul Weidinger
                |  for 
                a(href="http://cs.cmu.edu/~237") 15-237
                |  at Carnegie Mellon
            p Runs on Node.JS with Express, Passport, Jade, Stylus, Nib, Nodemailer and MongoDB
        script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js")
        script(src="/js/scroller.js")
        block scripts
            
